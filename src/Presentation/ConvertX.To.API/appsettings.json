{
  "ConversionLifecycleManagerSettings": {
    "TimeToLiveInMinutes": 30
  },
  "DatabaseSettings": {
    "UseInMemoryDatabase": false,
    "EnableSensitiveDataLogging": true,
    "ConnectionString": "Host=postgres;Username=postgres;Password=kYsiW8133PNw;Database=ConvertXTo"
  },
  "ConversionStorageSettings": {
    "WindowsRootDirectory": "C:\\dev\\convertx.to\\.conversionStorage",
    "DockerRootDirectory": "/conversionStorage"
  },
  "Serilog": {
    "Using": [
      "Serilog.Exceptions",
      "Serilog.Enrichers.ClientInfo"
    ],
    "Enrich": [
      "WithExceptionDetails",
      "WithClientIp",
      "WithClientAgent"
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Hangfire": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System.Net.Http.HttpClient": "Warning"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "@mt = 'An unhandled exception has occurred while executing the request.'"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} {SourceContext}] {Message:lj} {ClientIp} {ClientAgent}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
